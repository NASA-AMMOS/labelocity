<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>labelocity</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <directoryMode>0775</directoryMode>
            <fileMode>0644</fileMode>
            <includes>
                <include>version</include>
                <include>README*</include>
            </includes>
            <excludes>
                <exclude>**/target/</exclude>
            </excludes>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}</directory>
            <directoryMode>0775</directoryMode>
            <fileMode>0755</fileMode>
            <includes>
                <include>**/*.sh</include>
                <include>**/*.csh</include>
                <include>**/*.tcsh</include>
            </includes>
            <excludes>
                <exclude>**/target/</exclude>
            </excludes>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/bin</directory>
            <directoryMode>0775</directoryMode>
            <fileMode>0755</fileMode>
            <includes>
                <include>**/*.py</include>
                <include>**/*.csh</include>
                <include>**/*.tcsh</include>
                <include>LabelBrowse</include>
                <include>LabelImage</include>
                <include>LabelNonimg</include>
                <include>LabelObj</include>
            </includes>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/bin</directory>
            <directoryMode>0775</directoryMode>
            <fileMode>0644</fileMode>
            <includes>
                <include>**/*.txt</include>
                <include>**/*.VIC</include>
            </includes>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/jars</directory>
            <directoryMode>0775</directoryMode>
            <fileMode>0644</fileMode>
            <includes>
                <include>**/*.jar</include>
            </includes>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/templates</directory>
            <directoryMode>0775</directoryMode>
            <fileMode>0644</fileMode>
            <includes>
                <include>**/*.vm</include>
                <include>**/*.vmac</include>
                <include>**/*.json</include>
            </includes>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
    </fileSets>
</assembly>